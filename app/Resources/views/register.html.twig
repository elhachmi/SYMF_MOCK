{% extends 'base.html.twig' %}

{% block title %} Sign up {% endblock %}
{% block body_class 'hold-transition register-page' %}
{% block body %}

    <div class="register-box">
      <div class="register-logo">
        <a href="#"><b>Registration</b></a>
      </div>

      <div class="register-box-body">
        <p class="login-box-msg">Register a new membership</p>
        {{ form_start(form) }}
            <div class="alert-danger">
                {{ form_errors(form) }}
            </div>
          <div class="form-group has-feedback">
{#            <input type="text" class="form-control" placeholder="Full name">#}
            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder':form.username.vars.name }}) }}
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
            <div class="alert-danger">{{ form_errors(form.username) }}</div>
          </div>
          <div class="form-group has-feedback">
{#            <input type="email" class="form-control" placeholder="Email">#}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder':form.email.vars.name }}) }}
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            <div class="alert-danger">{{ form_errors(form.email) }}</div>
          </div>
          <div class="form-group has-feedback">
{#            <input type="password" class="form-control" placeholder="Password">#}
            {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'placeholder':form.password.first.vars.label }}) }}
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
             <div class="alert-danger">{{ form_errors(form.password.first) }}</div> 
          </div>
          <div class="form-group has-feedback">
{#            <input type="password" class="form-control" placeholder="Retype password">#}
            {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'placeholder':form.password.second.vars.label }}) }}
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>

          </div>
          <div class="form-group has-feedback">
{#            <input type="password" class="form-control" placeholder="Retype password">#}
            {{ form_widget(form.avatarUrl, {'attr': {'class': '', 'placeholder':form.avatarUrl.vars.name }}) }}
            <span class="form-control-feedback"></span>
            <div class="alert-danger"> {{ form_errors(form.avatarUrl) }}</div>
          </div>
          <div class="row">
            <div class="col-xs-4">
{#              <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>#}
              {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-block btn-flat', 'placeholder':form.save.vars.name }}) }}
            </div><!-- /.col -->
          </div>
        {{ form_end(form) }}


        <a href="{{ url('login_route') }}" class="text-center">I already have a membership</a>
      </div><!-- /.form-box -->
    </div><!-- /.register-box -->
    
    
{% endblock %}
