
{% extends 'base.html.twig' %}

{% block title %} Log In {% endblock %}
{% block body_class 'hold-transition login-page' %}
    {% block body %}

        <div class="login-box">
            <div class="login-logo">
                <a href="#"><b>Log In</b></a>
            </div><!-- /.login-logo -->
            <div class="login-logo">
            </div><!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">Sign in to start your session</p>
                {% if error %}
                    <div class="alert alert-danger well-sm">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}        
                <form action="{{ path('login_check') }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="form-group has-feedback">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username">
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" id="password" name="_password" class="form-control" placeholder="Password">
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="_target_path" value="login_success" />
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <button type="submit" name="_submit" id="_submit" class="btn btn-primary btn-block btn-flat">Login</button>
                        </div><!-- /.col -->
                    </div>
                </form>

                <a href="{{ path('signup') }}"> Register new membership</a>

            </div><!-- /.login-box-body -->
        </div><!-- /.login-box -->

    {% endblock%} 

